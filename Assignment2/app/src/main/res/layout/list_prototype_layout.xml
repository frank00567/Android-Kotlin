<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <CheckBox
            android:id="@+id/list_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_alignTop="@+id/list_nameLbl"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    <TextView
            android:id="@+id/list_nameLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/task_name_label"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/list_checkBox"
            android:layout_toEndOf="@+id/list_checkBox" />

    <TextView
            android:id="@+id/list_dateLbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:text="@string/placeholder_date"
            android:textSize="12sp"
            android:layout_below="@+id/list_nameLbl"
            android:layout_alignLeft="@+id/list_nameLbl"
            android:layout_alignStart="@+id/list_nameLbl" />

</RelativeLayout>